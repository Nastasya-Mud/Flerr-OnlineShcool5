{
  "name": "flerr-online-school",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:server\"",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:server": "npm run dev --workspace=apps/server",
    "build": "npm run build --workspace=apps/web && npm run build --workspace=apps/server",
    "build:web": "npm run build --workspace=apps/web",
    "build:server": "npm run build --workspace=apps/server",
    "start": "npm run start --workspace=apps/server",
    "seed": "npm run seed --workspace=apps/server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

